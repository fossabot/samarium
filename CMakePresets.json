{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "ninja",
            "inherits": "default",
            "generator": "Ninja"
        },
        {
            "name": "gcc",
            "inherits": "ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "clang",
            "inherits": "ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "coverage",
            "displayName": "Build for Coverage Analysis",
            "description": "use GCC's coverage feature",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "GENERATE_COVERAGE": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "configuration": "Release",
            "cleanFirst": true,
            "jobs": 6
        },
        {
            "name": "gcc",
            "inherits": "default",
            "configurePreset": "gcc"
        },
        {
            "name": "clang",
            "inherits": "default",
            "configurePreset": "clang"
        },
        {
            "name": "coverage",
            "configurePreset": "coverage",
            "configuration": "Debug",
            "targets": "coverage",
            "cleanFirst": true
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "configuration": "Release",
            "output": { "outputOnFailure": true, "verbosity": "extra" },
            "execution": { "noTestsAction": "error", "stopOnFailure": true }
        },
        {
            "name": "coverage",
            "configurePreset": "coverage",
            "configuration": "Debug",
            "output": { "outputOnFailure": true, "verbosity": "extra" },
            "execution": { "noTestsAction": "error", "stopOnFailure": true }
        }
    ]
}
