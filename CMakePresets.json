{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build",
            "binaryDir": "${sourceDir}/build/",
            "installDir": "${sourceDir}/build/install/",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "ninja",
            "inherits": "default",
            "generator": "Ninja"
        },
        {
            "name": "gcc",
            "inherits": "ninja",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "clang",
            "inherits": "ninja",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "coverage",
            "displayName": "Build for Coverage Analysis",
            "description": "Use GCC's coverage feature",
            "inherits": "gcc",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_COVERAGE": true,
                "BUILD_UNIT_TESTS": true
            }
        },
        {
            "name": "dev",
            "description": "Use gcc, Ninja, and skip extra tests",
            "inherits": "clang",
            "cacheVariables": {
                "BUILD_UNIT_TESTS": false,
                "BUILD_EXAMPLES": false,
                "BUILD_DOCS": false,
                "BUILD_BENCHMARKS": true
            }
        },
        {
            "name": "debug",
            "description": "Debug version of default",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "ubsan",
            "description": "Use clang, address sanitizer, Ninja, and skip extra tests",
            "inherits": "clang",
            "cacheVariables": {
                "USE_UBSAN": true,
                "BUILD_UNIT_TESTS": false,
                "BUILD_EXAMPLES": false
            }
        },
        {
            "name": "iwyu",
            "description": "Run Include What You Use",
            "inherits": "clang",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "USE_IWYU": "TRUE"
            }
        },
        {
            "name": "docs",
            "description": "Build Documentation",
            "inherits": "default",
            "cacheVariables": {
                "BUILD_DOCS": "TRUE"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "configuration": "Release",
            "jobs": 6
        },
        {
            "name": "coverage",
            "configurePreset": "coverage",
            "configuration": "Debug",
            "cleanFirst": true
        },
        {
            "name": "iwyu",
            "configurePreset": "iwyu",
            "configuration": "Debug",
            "jobs": 1
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "configuration": "Release",
            "output": { "outputOnFailure": true, "verbosity": "default" }
        },
        {
            "name": "coverage",
            "configurePreset": "coverage"
        }
    ]
}
