{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build",
            "binaryDir": "${sourceDir}/build/",
            "installDir": "${sourceDir}/build/install/",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_COLOR_DIAGNOSTICS": true,
                "CMAKE_COMPILE_WARNING_AS_ERROR": false,
                "BUILD_UNIT_TESTS": false,
                "BUILD_EXAMPLES": true,
                "BUILD_BENCHMARKS": false,
                "BUILD_DOCS": false,
                "BUILD_DOCS_TARGET": true,
                "USE_WARNINGS": true,
                "USE_CCACHE": true,
                "USE_UBSAN": false
            }
        },
        {
            "name": "ci",
            "inherits": "default",
            "cacheVariables": {
                "BUILD_UNIT_TESTS": true,
                "RUN_CONAN": true
            }
        },
        {
            "name": "ninja",
            "inherits": "default",
            "generator": "Ninja"
        },
        {
            "name": "gcc",
            "inherits": "ninja",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "clang",
            "inherits": "ninja",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
            }
        },
        {
            "name": "dev",
            "description": "Use gcc, Ninja, and skip extra tests",
            "inherits": "clang",
            "cacheVariables": {
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": true,
                "USE_UBSAN": false,
                "BUILD_UNIT_TESTS": false,
                "BUILD_EXAMPLES": false,
                "BUILD_DOCS": false,
                "BUILD_BENCHMARKS": false
            }
        },
        {
            "name": "debug",
            "description": "Debug version of dev",
            "inherits": "dev",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "USE_UBSAN": true
            }
        },
        {
            "name": "ubsan",
            "description": "Use clang, address sanitizer, Ninja, and skip extra tests",
            "inherits": "clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "USE_UBSAN": true,
                "BUILD_UNIT_TESTS": false,
                "BUILD_EXAMPLES": false
            }
        },
        {
            "name": "iwyu",
            "description": "Run Include What You Use",
            "inherits": "clang",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "USE_IWYU": "TRUE"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "configuration": "Release",
            "jobs": 6
        },
        {
            "name": "iwyu",
            "configurePreset": "iwyu",
            "configuration": "Debug",
            "jobs": 1
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "configuration": "Release",
            "output": { "outputOnFailure": true, "verbosity": "default" }
        }
    ]
}
